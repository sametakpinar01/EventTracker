@model IEnumerable<EventTracker.Models.EventModel>

@{
    // Sayfa başlığı ayarlanıyor
    ViewData["Title"] = "Etkinlik Listesi";
}

<h1>Etkinlik Listesi</h1>

<p>
    <!-- Yeni etkinlik eklemek için bağlantı -->
    <a asp-action="Create" class="btn btn-primary">Yeni Etkinlik Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <!-- Tablo başlıkları -->
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Etkinlik bilgilerini listeleme -->
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>
                    <!-- Etkinlik işlemleri: Detaylar, Düzenle, Sil -->
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detaylar</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                       onclick="return confirm('Bu etkinliği silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
