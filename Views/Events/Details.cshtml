@model EventTracker.Models.EventModel

@{
    // Sayfa başlığı ayarlanıyor
    ViewData["Title"] = "Etkinlik Detayları";
}

<h1>Etkinlik Detayları</h1>

<div class="card">
    <div class="card-header">
        <!-- Etkinlik başlığı gösteriliyor -->
        <h3>@Model.Title</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <!-- Etkinlik başlığı bilgisi -->
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <!-- Etkinlik açıklaması bilgisi -->
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <!-- Etkinlik tarihi bilgisi -->
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <!-- Etkinliği düzenleme ve listeye geri dönme bağlantıları -->
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
        <a asp-action="List" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
